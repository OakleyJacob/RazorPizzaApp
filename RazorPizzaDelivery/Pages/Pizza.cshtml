@page
@model RazorPizzaDelivery.Pages.PizzaModel
@{
}

<div class ="text-center">
	
	<div class="mainText">
		<h1 class="display-4 text-capitalize text-black"> Our pizza menu!</h1>
		<h4>Choose your favorite or build your own!</h4>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-12 mb-5 mt-5">
				<div class="w-100 row makeYourOwnDiv">
					<div class="col-4">
						<img src="~/images/Pizzas/Create.png" class="w-100"/>
					</div>
					<div class="col-8 align-items-center">
						<div class="align-middle makeYourOwnText">
							<h3 style="text-align:Left;"> Create your own Pizza</h3>
							<p style ="text-align:Left;"> Use our pizza maker below!</p>
							<a class="btn btn-primary" style="float:left;" asp-area="" asp-page="Forms/CustomPizza"> Try It</a>

						</div>
					</div>
				</div>
			</div>
			@foreach (var pizza in Model.fakePizzaDB)
				{
				var imagePath = "~/images/Pizzas/" + (pizza.ImageTitle + ".png");
				<div class="col-4 mb-5">
					<img src="@imagePath" class="w-100" asp-append-version="true" />
					<a class="btn btn-primary mt-1" asp-area="" asp-page="Checkout/Checkout" asp-route-ImageTitle="@pizza.ImageTitle" 
					asp-route-PizzaPrice="@pizza.FinalPrice">Get this Pizza!</a>
					<br />
				</div>
				}
			
		</div>

	</div>

</div>