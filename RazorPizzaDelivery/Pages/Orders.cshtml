@page
@model RazorPizzaDelivery.Pages.OrdersModel
@{
}
<h3>Orders</h3>
<hr />
<table class="table">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Pizza Type
			</th>
			<th>
				Price
			</th>
		</tr>

	</thead>
	<tbody>
		@foreach(var order in Model.PizzaOrders){
			<tr>
				<td>
					@order.Id
				</td>
					
				<td>
					@order.PizzaName
				</td>
				<td>
					 
					@order.OrderPrice
				</td>
			</tr>
		}
	</tbody>
</table>